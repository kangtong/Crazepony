<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:padding="30dp"
        android:layout_above="@+id/layout_control">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张成阳"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未连接"
            android:drawableLeft="@drawable/shape_circle"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:background="@null"/>
        <TextView
            android:id="@+id/text_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_power"
            android:layout_marginBottom="6dp"
            android:text="请确保安全的环境下启动"/>
        <Button
            android:id="@+id/btn_power"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:background="@drawable/ic_power_button"
            android:text="START"
            android:textColor="#62A5F4"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_seek"
                android:text="6"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:maxWidth="0dp"
            android:maxHeight="1000dp"
            android:adjustViewBounds="true"
            android:src="@drawable/seekbar"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            android:background="@android:color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_weight="1">
                    <ImageButton
                        android:id="@+id/button_altitude"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_altitude"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:textAlignment="center"
                        android:text="高度"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/button_direction"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_direction"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:textAlignment="center"
                        android:text="高度"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/button_forward"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_forward_backward"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:textAlignment="center"
                        android:text="高度"/>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        app:menu="@menu/navigation" />

</RelativeLayout>